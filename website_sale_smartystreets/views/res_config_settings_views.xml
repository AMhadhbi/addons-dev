<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.website.sale
		</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="website.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<div id="webmaster_settings" position="after">
				<h2>Address Verification</h2>
				<div class="row mt16 o_settings_container" id="smartyStreets_settings">
					<div class="o_setting_left_pane">
						<field name="has_smarty_streets"/>
					</div>
					<div class="col-xs-12 col-md-6 o_setting_box" id="has_smarty_streets_install_setting"
						title="SmartyStreets Integration">
						<label for="has_smarty_streets" />
						<div class="o_setting_right_pane">
							<div class="text-muted">
								Integrating the SmartyStreets API will enable you to verify the validity of
								city and zip code in checkout form
							</div>
							<div class="content-group"
								attrs="{'invisible': [('has_smarty_streets', '=', False)]}">
								<div class="row">
									<label class="col-md-6 o_light_label" string="Auth ID"
										for="access_key" />
									<field name="smart_auth_id" class="oe_inline" />
								</div>
								<div class="row">
									<label class="col-md-6 o_light_label" string="Auth Token"
										for="access_key" />
									<field name="auth_token_id" class="oe_inline" />
								</div>
								<div class="row">
									<a href="https://smartystreets.com/docs" class="oe_link fa fa-arrow-right"
										target="_blank">
										How to get my Secret Keys
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</field>
	</record>
</odoo>
