<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<record id="payment.payment_acquirer_checkout" model="payment.acquirer">
			<field name="name">Checkout.com</field>
			<field name="image" type="base64"
				file="payment_checkout/static/src/img/checkout_icon.png" />
			<field name="provider">checkout</field>
			<field name="company_id" ref="base.main_company" />
			<field name="view_template_id" ref="checkout_form" />
			<field name="registration_view_template_id" ref="checkout_s2s_form" />
			<field name="environment">test</field>
			<field name="description" type="html">
				<p>
					A payment gateway to accept online payments via credit cards and
					e-checks.
            </p>
				<ul class="list-inline">
					<li>
						<i class="fa fa-check" />
						Online Payment
					</li>
					<li>
						<i class="fa fa-check" />
						Payment Status Tracking
					</li>
				</ul>
			</field>
			<field name="pre_msg"><![CDATA[
			<p>You will be prompt with Checkout.com Payment page for payment information.</p>]]></field>
			<field name="checkout_secret_key">dummy</field>
			<field name="checkout_publishable_key">dummy</field>
		</record>
	</data>
</odoo>
